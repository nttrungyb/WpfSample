<Window x:Class="WpfSample1.Component.DockPanel1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSample1.Component"
        mc:Ignorable="d"
        Title="DockPanel" Height="450" Width="800"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <DockPanel>

            <StackPanel DockPanel.Dock="Top">
                <Button Content="A Stretched Top Button"></Button>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="A Centered Top Button"></Button>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button Content="A Left-Aligned Top Button"></Button>
                </StackPanel>
            </StackPanel>
            <Button DockPanel.Dock="Bottom">Bottom Button</Button>
            <Button DockPanel.Dock="Left">Left Button</Button>
            <Button DockPanel.Dock="Right">Right Button</Button>
            <Button>Remaining Space</Button>
        </DockPanel>
    </Grid>
</Window>
