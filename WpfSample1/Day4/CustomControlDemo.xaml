<Window x:Class="WpfSample1.Day4.CustomControlDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSample1.Day4"
        xmlns:uc="clr-namespace:DemoControlLibrary;assembly=DemoControlLibrary"
        mc:Ignorable="d"
        Title="CustomControlDemo" Height="450" Width="800"
        WindowStartupLocation="CenterOwner">
    <StackPanel>
        <uc:CcButton x:Name="custControl" Content="Click Me!" Width="100"
                     Height="50" Margin="10" Click="custControl_Click"></uc:CcButton>
        <TextBlock x:Name="txtMessage" Width="250" Height="30"></TextBlock>
    </StackPanel>
</Window>
