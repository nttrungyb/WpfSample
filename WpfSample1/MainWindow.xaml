<Window x:Class="WpfSample1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSample1"
        mc:Ignorable="d"
        Title="WPF Panel Samples" Height="768" Width="1024" 
        WindowState="Maximized">


    <DockPanel>
        <TextBlock DockPanel.Dock="Top" TextAlignment="Center">Title Bar</TextBlock>
        <TextBlock DockPanel.Dock="Bottom" TextAlignment="Center">Status Bar</TextBlock>
        <Frame x:Name="frmMainContent" NavigationUIVisibility="Hidden">
        </Frame>
    </DockPanel>
    

</Window>
